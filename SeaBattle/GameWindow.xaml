<Window x:Class="SeaBattle.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SeaBattle"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800" x:Name="Game">
    <Grid Background="Aquamarine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="302" Width="302"
                x:Name="PlayerBoard">
            <Border BorderBrush="Navy" BorderThickness="1" Width="302" Height="302" />
        </Canvas>
        <Canvas Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="302" Width="302"
                x:Name="ComputerBoard">
            <Border BorderBrush="Navy" BorderThickness="1" Width="302" Height="302" Background="Aquamarine"
                    MouseDown="OppositeBoardClick"/>
        </Canvas>
    </Grid>
</Window>